import java.util.Scanner;
public class hillcipher {
 public static String encrypt(String plaintext, int key) {
 plaintext = plaintext.replaceAll("\\s+", ""); // remove spaces
 StringBuilder[] rails = new StringBuilder[key];
 for (int i = 0; i < key; i++) rails[i] = new StringBuilder();
 int dir = 1;
 int row = 0;
 for (char c : plaintext.toCharArray()) {
 rails[row].append(c);
 row += dir;
 if (row == 0 || row == key - 1) dir *= -1;
 }
 StringBuilder cipher = new StringBuilder();
 for (StringBuilder rail : rails) {
 cipher.append(rail);
 }
 return cipher.toString();
 }
 public static String decrypt(String ciphertext, int key) {
 int len = ciphertext.length();
 boolean[] mark = new boolean[len];
 char[] result = new char[len];
 for (int r = 0; r < key; r++) {
 int dir = 1;
 int row = 0;
 for (int i = 0; i < len; i++) {
 if (row == r) mark[i] = true;
 row += dir;
 if (row == 0 || row == key - 1) dir *= -1;
 }
 }
 int cipherIndex = 0;
 for (int r = 0; r < key; r++) {
 int dir = 1;
 int row = 0;
 for (int i = 0; i < len; i++) {
 if (row == r && mark[i]) {
result[i] = ciphertext.charAt(cipherIndex++);
 }
 row += dir;
 if (row == 0 || row == key - 1) dir *= -1;
 }
 }
 return new String(result);
 }
 public static void main(String[] args) {
 Scanner scanner = new Scanner(System.in);
 System.out.print("Enter the text: ");
 String text = scanner.nextLine();
 System.out.print("Enter the key (number of rails): ");
 int key = scanner.nextInt();
 String encrypted = encrypt(text, key);
 System.out.println("Encrypted Text: " + encrypted);
 String decrypted = decrypt(encrypted, key);
 System.out.println("Decrypted Text: " + decrypted);
 scanner.close();
 }
}
